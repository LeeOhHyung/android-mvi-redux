<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splash">

    <fragment
        android:id="@+id/splash"
        android:name="kr.ohyung.mvi.splash.SplashFragment"
        tools:layout="@layout/fragment_splash">
        <argument
            android:name="duration"
            app:argType="long" />
        <argument
            android:name="query"
            app:argType="string" />
        <action
            android:id="@+id/to_bottom_navigation_fragment"
            app:launchSingleTop="true"
            app:destination="@id/bottom_navigation_fragment" />
    </fragment>

    <fragment
        android:id="@+id/bottom_navigation_fragment"
        android:name="kr.ohyung.mvi.main.BottomNavigationFragment"
        tools:layout="@layout/fragment_bottom_navigation" />


</navigation>
