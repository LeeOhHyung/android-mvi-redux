<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragment_splash">

    <include app:graph="@navigation/nav_graph_bottom_navigation" />

    <fragment
        android:id="@+id/fragment_splash"
        android:name="kr.ohyung.mvi.splash.SplashFragment"
        tools:layout="@layout/fragment_splash">
        <argument
            android:name="duration"
            app:argType="long" />
        <argument
            android:name="query"
            app:argType="string" />
    </fragment>

    <action
        android:id="@+id/to_bottom_navigation_fragment"
        app:popUpTo="@id/bottom_navigation_graph"
        app:popUpToInclusive="true"
        app:destination="@id/bottom_navigation_graph" />

</navigation>
